{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js?path=$1"
        },
        {
            "src": "/dashboard",
            "dest": "/frontend/dashboard.html"
        },
        {
            "src": "/crm",
            "dest": "/frontend/crm.html"
        },
        {
            "src": "/login",
            "dest": "/frontend/login.html"
        },
        {
            "src": "/register",
            "dest": "/frontend/register.html"
        },
        {
            "src": "/termos",
            "dest": "/frontend/termos.html"
        },
        {
            "src": "/guia",
            "dest": "/frontend/guia.html"
        },
        {
            "src": "/quiz",
            "dest": "/frontend/quiz.html"
        },
        {
            "src": "/downloads/(.*)",
            "dest": "/frontend/downloads/$1"
        },
        {
            "src": "/(.*\\.html)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.css)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.js)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.png)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.jpg)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.svg)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.ico)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*\\.zip)",
            "dest": "/frontend/downloads/$1"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        }
    ]
}